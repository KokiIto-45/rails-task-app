<script>
    $(function () {
        $('#date').bootstrapMaterialDatePicker({
            time: false,
            lang: "ja",
            format: "YYYY年M月D日",
            minDate: moment()
        });
    });
</script>
<div class="listnewPage">
  <div class="container">
    <%= form_with model: @list, url: { action: :create }, class: "new_list", local: true do |f| %>
      <% if @list.errors.any? %>
        <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
      <% end %>
      <p>授業日程</p>
      <%= f.text_field :title, id: "date", class: "form-control listName" %>
      <div class="text-center"><%= f.submit "作成", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>
